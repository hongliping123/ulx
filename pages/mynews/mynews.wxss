page {
  background: #f5f5f5;
}

.cont_top {
  margin-top: 5rpx;
  background: #fff;
  /* height: 116rpx; */
  display: flex;
  justify-content: space-between;
  padding: 30rpx 80rpx;
}

.cont_top_img {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cont_top_img text {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.cont_top_img image {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 10rpx;
}

.cont_body {
  background: #fff;
  padding: 0 20rpx;
  margin-top: 20rpx;
}

.cont_body_img {
  height: 180rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
}

.cont_body_img image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.cont_body_img_text {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 60%;
  margin-left: 20rpx;
}

.cont_body_img_text text:nth-child(1) {
  font-size: 32rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.cont_body_img_text text:nth-child(2) {
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}
