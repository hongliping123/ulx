page {
  background: #f5f5f5;
}

.top {
  width: 750rpx;
  height: 274rpx;
  display: flex;
  justify-content: space-around;
  background: #fff;
}

.top .top_lr, .top .top_fr {
  margin-top: 40rpx;
  text-align: center;
}

.top .top_lr image, .top .top_fr image {
  width: 100rpx;
  height: 100rpx;
}

.top .top_lr .aa, .top .top_fr .aa {
  height: 28rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 28rpx;
  margin-top: 20rpx;
}

.top .top_lr .bb, .top .top_fr .bb {
  height: 20rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  line-height: 20rpx;
  margin-top: 20rpx;
}

.wenti {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.item {
  background: #fff;
  padding-bottom: 30rpx;
}

.item .list {
  height: 100rpx;
  border-bottom: 1px solid #ccc;
  width: 690rpx;
  margin: 0 auto;
  display: flex;
}

.item .list .list1 {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  margin-top: 33rpx;
}

.item .list text {
  flex: 1;
  margin-left: 30rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.item .list .right {
  width: 11rpx;
  height: 20rpx;
  margin-top: 40rpx;
  margin-right: 4rpx;
}

.zzc {
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  top: 0;
  left: 0;
}

.zzc .zzc_box {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 580rpx;
  height: 170rpx;
  border-radius: 12rpx;
  background: #fff;
}

.zzc .zzc_box .zzc_box_top {
  height: 90rpx;
  border-bottom: 1rpx solid #e5e5e5;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 90rpx;
  text-align: center;
}

.zzc .zzc_box .zzc_box_footer {
  display: flex;
}

.zzc .zzc_box .zzc_box_footer .pop {
  line-height: 80rpx;
  text-align: center;
  border-right: 1rpx solid #ccc;
  width: 50%;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}
.zzc .zzc_box .zzc_box_footer .ptp {
  line-height: 80rpx;
  text-align: center;
  width: 50%;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color:rgba(226,85,32,1);
}
