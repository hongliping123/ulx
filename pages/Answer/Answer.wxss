.item {
  width: 750rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
  padding-bottom: 40rpx;
}

.item .item_left {
  width: 60rpx;
  height: 50rpx;
  background: rgba(226, 85, 32, 1);
  border-radius: 0px 10rpx 0px 0rpx;
  text-align: center;
  line-height: 50rpx;
  margin-top: 35rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
}

.item .item_right {
  margin: 35rpx 30rpx 0 20rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}
