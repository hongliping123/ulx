.cont_top {
  background: url('http://m.qpic.cn/psb?/V103fdTR0PY8oM/m*AyozpOhJIQmeZ.eBabU2aQuHejf56AZh7IkBfs8pY!/b/dMMAAAAAAAAA&bo=7gIsAQAAAAADB.M!&rf=viewer_4') no-repeat;
  background-size: 100% 100%;
  height: 300rpx;
}

.cont_top {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  position: relative;
}

.cont_top>text:nth-child(1) {
  font-size: 36rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.cont_top>text:nth-child(2) {
  font-size: 72rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
}

.cont_body {
  padding: 20rpx;
  border-radius: 40rpx 40rpx 0px 0px;
  position: absolute;
  width: 95%;
  top: 260rpx;
  background: #fff;
}

.cont_body_title {
  height: 100rpx;
  display: flex;
  align-items: center;
}

.cont_body_title text {
  font-size: 34rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.cont_body_list {
  height: 150rpx;
  border-bottom: 1px solid #f5f5f5;
}

.cont_body_list {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cont_body_list_text {
  display: flex;
  flex-direction: column;
}

.cont_body_list_text>text:nth-child(1) {
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.cont_body_list_text>text:nth-child(2) {
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  margin-top: 10rpx;
}

.cont_body_list_money {
  font-size: 42rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(226, 85, 32, 1);
}
