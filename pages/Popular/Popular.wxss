.item {
  display: flex;
  padding: 0 20rpx;
  margin-top: 30rpx;
  justify-content: space-between;
  flex-wrap: wrap;
}

.item .list {
  position: relative;
  background: #fff;
  border-radius: 10rpx;
  width: 348rpx;
  margin-top: 20rpx;
}

.item .list .img {
  height: 486rpx;
  width: 348rpx;
}

.item .list .img1 {
  width: 348rpx;
  height: 475rpx;
}
.item .list .img11{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top:15rpx;
  right: 15rpx;
}

.item .list .list_title {
  width: 348rpx;
  height: 86rpx;
  padding: 15rpx 22rpx 0rpx 22rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item .list .list_footer {
  padding: 0 22rpx;
  box-sizing: border-box;
  margin-top: 12rpx;
  display: flex;
  justify-content: space-between;
}

.item .list .list_footer .list_la {
  height: 60rpx;
  display: flex;
}

.item .list .list_footer .list_la image {
  width: 40rpx;
  height: 40rpx;
}

.item .list .list_footer .list_la view {
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  font-weight: bold;
  color: rgba(120, 120, 120, 1);
  line-height: 45rpx;
  margin-left: 12rpx;
}
.item .list .list_footer .Fabulous{
  width: 80rpx;
  display: flex;
  justify-content: space-between;
}
.item .list .list_footer .Fabulous image{
  width: 26rpx;
  height: 22rpx;
  margin-top: 12rpx;
}
.item .list .list_footer .Fabulous view{
  font-size:24rpx;
font-family:PingFang-SC-Bold;
font-weight:bold;
color:rgba(0,0,0,1);
line-height: 41rpx;
}
.item .list .Popular {
  position: absolute;
  top: 0rpx;
  left: 50%;
  width: 300rpx;
  transform: translate(-50%);
}

.item .list .Popular .Popular_list {
  height: 76rpx;
  line-height: 76rpx;
  font-size: 34rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  border-bottom: 1px solid rgba(255, 255, 255, 0.3);
}

.item .list .Popular .Popular_list1 {
  font-size: 28rpx;
  height: 76rpx;
  line-height: 76rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  border-bottom: 1px solid rgba(255, 255, 255, 0.3);
}

.item .list .Popular view:nth-child(6) {
  border: 0 !important;
}
