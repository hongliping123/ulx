.container {
  padding: 20rpx;
}

.cont_top {
  background: url("http://m.qpic.cn/psb?/V103fdTR0PY8oM/nS*JDSqrM*4EQrJteXodkGCBYomD.0rLx2TxJ5tLDLc!/b/dLgAAAAAAAAA&bo=7gJoAe4CaAEDCSw!&rf=viewer_4") no-repeat;
