  border-radius: 10rpx;
  position: relative;
}

.cont_value {
  width: 240rpx;
  height: 80rpx;
  background: rgba(5, 0, 1, 0.4);
  border-radius: 10rpx;
  font-size: 34rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  bottom: 40rpx;
  left: 30rpx;
}

.cont_top_text {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
}

.cont_top_text_sg {
  font-size: 38rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.cont_money {
  font-size: 38rpx;
  font-weight: bold;
  color: rgba(226, 85, 32, 1);
}

.cont_top_text1 {
  font-size: 28rpx;
  color: rgba(153, 153, 153, 1);
  margin-top: 30rpx;
}

.cont_top_but {
  height: 90rpx;
  background: rgba(226, 85, 32, 1);
  border-radius: 10px;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 30rpx 0;
}

.cont_bottom_title {
  font-size: 38rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.cont_bottom_list {
