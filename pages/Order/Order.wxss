page {
  background: #ececec;
}

.db {
  position: relative;
  overflow: hidden;
}

.db .db_bg {
  width: 750rpx;
  height: 400rpx;
  background: #e25520;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.top {
  width: 690rpx;
  margin: 0 auto;
  background: #fff;
  margin-top: 20rpx;
  height: 230rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 0 15rpx;
  overflow: hidden;
}

.top .top_ding {
  padding-bottom: 20rpx;
  border-bottom: 1px solid #ccc;
}

.top .top_ding .top_title {
  height: 31rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
  line-height: 31rpx;
  margin-top: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.top .top_ding .top_date {
  height: 26rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 26rpx;
  margin-top: 26rpx;
}

.top .top_footer {
  margin-top: 16rpx;
  display: flex;
  height: 33rpx;
}

.top .top_footer image {
  width: 33rpx;
  height: 33rpx;
}

.top .top_footer text {
  height: 33rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 33rpx;
  margin-left: 15rpx;
}

.Trip {
  width: 690rpx;
  margin: 0 auto;
  margin-top: 25rpx;
  border-radius: 10rpx;
  height: 355rpx;
  background: #fff;
  overflow: hidden;
  box-sizing: border-box;
  padding: 0 15rpx;
}

.Trip .Trip_title {
  height: 29rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
  line-height: 29rpx;
  margin-top: 35rpx;
  margin-bottom: 24rpx;
}

.Trip .item {
  height: 86rpx;
  border-top: 1px solid #ccc;
  display: flex;
}

.Trip .item .item_left {
  width: 170rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(131, 131, 131, 1);
  line-height: 86rpx;
}

.Trip .item input {
  flex: 1;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(193, 193, 193, 1);
  margin-top: 22rpx;
}
.zzc_footer {
  width: 750rpx;
  height: 100rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  box-shadow: 0px 5px 42px 12px rgba(133, 133, 133, 0.31);
  display: flex;
}

.zzc_footer .zzc_footer_left {
  width: 450rpx;
  height: 100rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(255, 70, 1, 1);
  line-height: 100rpx;
  padding-left: 30rpx;
}

.zzc_footer .zzc_footer_left text {
  font-size: 46rpx;
}

.zzc_footer .zzc_footer_right {
  width: 300rpx;
  height: 100rpx;
  background-image: url('http://a3.qpic.cn/psb?/V11QWGHg0l6wht/ZiVc6Jkxn*YRSYvUoC10ocBBmGrzFX.JHxQbVmlqg.I!/b/dFYBAAAAAAAA&ek=1&kp=1&pt=0&bo=WALEAAAAAAADF6w!&tl=1&vuin=1170645443&tm=1563933600&sce=60-2-2&rf=viewer_4');
