page {
  background: #f5f5f5;
}

.cont_top {
  height: 180rpx;
  background: linear-gradient(90deg, rgba(226, 85, 32, 1) 0%, rgba(246, 159, 46, 1) 100%);
  background-size: 100% 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.cont_top text {
  margin-left: 20rpx;
  color: #fff;
}

.cont_top text:nth-child(1) {
  font-size: 38rpx;
  margin-bottom: 20rpx;
}

.cont_body {
  background: #fff;
  padding: 20rpx;
}

.cont_body_img {
  display: flex;
}

.cont_body_img1 {
  width: 180rpx;
  height: 180rpx;
}

.cont_body_img1 image {
  width: 180rpx;
  height: 180rpx;
}

.cont_body_img_text {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
}

.cont_body_img_text1 {
  display: flex;
  justify-content: space-between;
}

.cont_body_but {
  display: flex;
  margin-top: 30rpx;
  flex-direction: row-reverse;
}

.cont_body_but1 {
  width: 180rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 1);
  border: 1px solid rgba(153, 153, 153, 1);
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: rgba(96, 105, 114, 1);
  margin-left: 20rpx;
}

.cont_body_text {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  align-items: center;
}

.cont_body_text text:nth-child(1) {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: bold;
  color: rgba(63, 69, 75, 1);
}

.money_colour {
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(226, 85, 32, 1);
}

.cont_body_img_text>text:nth-child(1) {
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
}

.cont_body_img_text1 text:nth-child(2) {
  font-size: 28rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(153, 153, 153, 1);
}

.cont_tail {
  margin-top: 20rpx;
  background: #fff;
  padding: 80rpx 20rpx;
}

.cont_tail_text {
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.cont_tail_text1 {
  font-size: 28rpx;
  color: rgba(153, 153, 153, 1);
  margin-top: 20rpx;
}

.cont_tail_but {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
}

.cont_tail_but1 {
  width: 660rpx;
  height: 80rpx;
  background: rgba(226, 85, 32, 1);
  border-radius: 10px;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cont_hexiaoma {
  margin-top: 20rpx;
  background: #fff;
  padding: 20rpx;
}

.cont_hexiaoma_text {
  font-size: 36rpx;
  font-weight: bold;
  color: rgba(63, 69, 75, 1);
}

.cont_hexiaoma_img {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 500rpx;
}

.cont_hexiaoma_img image {
  width: 277rpx;
  height: 277rpx;
  margin-bottom: 30rpx;
}

.cont_hexiaoma_img text {
  font-size: 24rpx;
  font-weight: bold;
  color: rgba(158, 158, 158, 1);
}
