.cont_but {
  height: 177rpx;
}

.cont_but {
  display: flex;
  align-items: center;
  justify-content: center;
}

.cont_but_tail {
  width: 690rpx;
  height: 90rpx;
  background: rgba(226, 85, 32, 1);
  border-radius: 10rpx;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.cont_but_judan {
  width: 100%;
  height: 90rpx;
  background: rgba(226, 85, 32, 1);
  border-radius: 10rpx;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 50rpx;
  margin-right: 50rpx;
}

.cont_top_tk {
  background: #fff;
  margin-bottom: 20rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
}

.cont_top_tk text:nth-child(2) {
  font-size: 26rpx;
  color: rgba(226, 85, 32, 1);
}

.cont_body_xi {
  margin-bottom: 20rpx;
  font-size: 30rpx;
