.cont_top {
  height: 100rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}

.cont_top text:nth-child(1) {
  font-size: 46rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  margin-right: 20rpx;
}

.cont_top text:nth-child(2) {
  font-size: 30rpx;
  color: rgba(51, 51, 51, 1);
}

.cont_body_text {
  display: flex;
}

.cont_body_text>view:nth-child(1) {
  width: 60rpx;
  height: 50rpx;
  background: rgba(226, 85, 32, 1);
  border-radius: 0px 10px 0px 0px;
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  display: flex;
  justify-content: center;
  align-items: center;
}

.cont_body_text>view:nth-child(2) {
  font-size: 32rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  width: 638rpx;
  margin-left: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.cont_body_text1 {
  margin-left: 84rpx;
  margin-right: 52rpx;
  margin-top: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.cont_body_text2 {
  width: 76rpx;
  height: 48rpx;
  border: 1px solid rgba(153, 153, 153, 1);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: rgba(153, 153, 153, 1);
  margin-left: 84rpx;
  margin-top: 30rpx;
}

.cont_body{
  border-bottom: 1px solid #EEEEEE;
  line-height: 50rpx;
  height: 400rpx;
  margin-top: 30rpx; 
}