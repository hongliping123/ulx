.Comment {
  width: 690rpx;
  margin: 0 auto;
  height: 140rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 14rpx;
  margin-top: 30rpx;
  display: flex;
}

.Comment>image {
  width: 110rpx;
  height: 110rpx;
  margin-left: 10rpx;
  margin-top: 14rpx;
}

.Comment .Comment_conter {
  flex: 1;
  margin-top: 14rpx;
  margin-left: 36rpx;
}

.Comment .Comment_conter .Comment_title {
  height: 28rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
}

.Comment .Comment_conter .Comment_dian {
  display: flex;
  font-size: 24rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: #868686;
  margin-top: 14rpx;
}

.Comment .Comment_conter .Comment_dian view {
  color: rgba(74, 74, 74, 1);
  margin-right: 12rpx;
}

.Comment .Comment_conter .address {
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(134, 134, 134, 1);
  margin-top: 15rpx;
}

.Comment .Comment_Fabulous {
  display: flex;
  flex-direction: column;
  text-align: right;
  margin-right: 14rpx;
  position: relative;
}

.Comment .Comment_Fabulous image {
  width: 38rpx;
  height: 34rpx;
  position: absolute;
  left: 50%;
  top: 43rpx;
  transform: translateX(-50%);
}

.Comment .Comment_Fabulous view {
  font-size: 26rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
  height: 20px;
  line-height: 20rpx;
  margin-top: 90rpx;
}

.describe {
  width: 690rpx;
  margin: 0 auto;
}

.describe .describe_miao {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(52, 52, 52, 1);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.describe .describe_title {
  margin-top: 30rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(52, 52, 52, 1);
}

.describe .describe_miao {
  margin-top: 30rpx;
}

.Label {
  width: 690rpx;
  margin: 0 auto;
  display: flex;
  margin-top: 30rpx;
}

.Label .Label_item {
  border-radius: 22rpx;
  font-size: 26rpx;
  height: 44rpx;
  line-height: 44rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(226, 85, 32, 1);
  background: rgba(226, 85, 32, 0.3);
  padding: 0 20rpx 0 57rpx;
  position: relative;
}

.Label .Label_item>image {
  width: 31rpx;
  height: 31rpx;
  position: absolute;
  top: 7rpx;
  left: 14rpx;
}

.Label_comment {
  height: 52rpx;
  margin: 0 auto;
  margin-top: 46rpx;
  display: flex;
  width: 690rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
  justify-content: space-between;
}

.Label_comment .Label_comment_left {
  flex: 1;
  display: flex;
}

.Label_comment .Label_comment_left .Label_comment_left_list,
.Label_comment .Label_comment_right .Label_comment_left_list {
  display: flex;
}

.Label_comment .Label_comment_left .Label_comment_left_list:nth-child(2n),
.Label_comment .Label_comment_right .Label_comment_left_list:nth-child(2n) {
  margin-left: 17rpx;
}

.Label_comment .Label_comment_left .Label_comment_left_list image,
.Label_comment .Label_comment_right .Label_comment_left_list image {
  width: 58rpx;
  height: 51rpx;
  margin-right: 16rpx;
}

.send {
  width: 690rpx;
  margin: 0 auto;
  margin-top: 35rpx;
  padding-bottom: 50rpx;
}

.send .send_title {
  height: 27rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
  line-height: 27rpx;
}

.send .send_item {
  display: flex;
  justify-content: space-between;
