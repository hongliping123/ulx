.send .send_item .send_love text {
  margin-top: 18rpx;
  height: 17rpx;
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(226, 85, 32, 1);
  line-height: 17rpx;
}

.send .whole {
  text-align: center;
  margin-top: 50rpx;
  height: 25rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
  line-height: 25rpx;
}
