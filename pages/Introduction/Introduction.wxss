.top {
  display: flex;
  padding: 0 30rpx;
  width: 750rpx;
  box-sizing: border-box;
  justify-content: space-between;
}

.top .top_left {
  display: flex;
}

.top .top_right {
  width: 120rpx;
  height: 45rpx;
  background: rgba(226, 85, 32, 1);
  border-radius: 23rpx;
  line-height: 45rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  margin-top: 38rpx;
}

.top .top_right image {
  width: 21rpx;
  height: 21rpx;
  margin-left: 20rpx;
}

.top .top_left image {
  width: 90rpx;
  height: 90rpx;
  margin-top: 15rpx;
}

.top .top_left view {
  margin-left: 30rpx;
  line-height: 114rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.slide {
  width: 750rpx;
  height: 700rpx;
}

swiper {
  width: 750rpx;
