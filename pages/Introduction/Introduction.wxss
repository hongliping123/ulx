}

.send .send_item input {
  flex: 1;
  height: 54rpx;
  background: rgba(228, 228, 228, 1);
  border-radius: 27rpx;
  padding-left: 36rpx;
}

.send .send_item .send_conter {
  flex: 1;
}

.send .send_item .send_conter .send_conter_name {
  height: 25rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
  line-height: 25rpx;
  margin-top: 13rpx;
}

.send .send_item .send_conter .send_conter_ping {
  margin-top: 14rpx;
  height: 23rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(157, 157, 157, 1);
  line-height: 23rpx;
}

.send .send_item .send_love {
  width: 120rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.send .send_item .send_love image {
  width: 38rpx;
  height: 34rpx;
  margin: 0 auto;
  margin-top: 10rpx;
