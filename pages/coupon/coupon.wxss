page {
  background: #f5f5f5;
}

.cont_top {
  background: #fff;
  height: 100rpx;
  margin-top: 5rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: column;
}

.cont_top_text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48%;
  height: 100rpx;
  flex-direction: column;
  position: relative;
}

.cont_top_text1 {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cont_icon {
  border-right: 1px solid #eee;
  height: 40rpx;
}

.cont_icon_botton {
  width: 40rpx;
  border-bottom: 3px solid #e25520;
  border-radius: 10rpx;
  position: absolute;
  bottom: 0rpx;
}

.cont_body {
  padding: 30rpx;
}

.cont_body_yhj {
  background: url('http://m.qpic.cn/psb?/V103fdTR0PY8oM/qHUvmjz0.eOiUbLVaSE7YHEZkErQuKHXycw2sAM.O54!/b/dIMAAAAAAAAA&bo=sgLYALIC2AADCSw!&rf=viewer_4') no-repeat;
  background-size: 100% 100%;
  height: 216rpx;
  display: flex;
  margin-top: 20rpx;
}

.cont_body_yhj_money {
  width: 176rpx;
  height: 216rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.cont_body_yhj_money1 text {
  color: #fff;
}

.cont_body_yhj_money1 text:nth-child(2) {
  font-size: 56rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
}

.cont_body_yhj_text {
  color: #fff;
  font-size: 30rpx;
}

.cont_body_yhj_title {
  width: 400rpx;
  height: 216rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  margin-left: 20rpx;
}

.cont_body_yhj_title_text1 {
  font-size: 36rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.cont_body_yhj_title_text2 {
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(254, 161, 27, 1);
}

.cont_body_yhj_title_text3 {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}

.cont_body_yhj_ljsy {
  writing-mode: vertical-lr;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(226, 85, 32, 1);
  width: 72rpx;
  height: 216rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
