page{
  background: #F5F5F5;
}
.cont_body {
  background: #fff;
  padding: 0 20rpx;
  margin-top: 20rpx;
}

.cont_body_img {
  height: 180rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.cont_body_img1 {
  height: 180rpx;
  display: flex;
  align-items: center;
   border-radius: 50%;
}

.cont_body_img image {
  width: 100rpx;
  height: 100rpx;
 
}

.cont_body_img_text {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 60%;
  margin-left: 20rpx;
}

.cont_body_img_text text:nth-child(1) {
  font-size: 32rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.cont_body_img_text text:nth-child(2) {
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}

.cont_body_img>image{
  height: 140rpx;
  width: 140rpx;

}

.text{
  margin-right: 10rpx;
}