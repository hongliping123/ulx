.item {
  width: 750rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
  padding-bottom: 40rpx;
}

.item .item_left {
  width: 60rpx;
  height: 50rpx;
  background: rgba(226, 85, 32, 1);
  border-radius: 0px 10rpx 0px 0rpx;
  text-align: center;
  line-height: 50rpx;
  margin-top: 35rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
}

.item .item_right {
  margin: 35rpx 30rpx 0 20rpx;
  box-sizing: border-box;
  width: 617rpx;
}

.item .item_right .item_right_title {
  font-size: 32rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.item .item_right .item_right_text {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  margin-top: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
}

.item .item_right .item_dz {
  display: flex;
  margin-top: 30rpx;
}

.item .item_right .item_dz .dz {
  height: 48rpx;
  background: rgba(255, 255, 255, 1);
  border: 1px solid rgba(153, 153, 153, 1);
  border-radius: 10rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  padding: 0 14rpx;
  line-height: 48rpx;
  margin-right: 20rpx;
}
