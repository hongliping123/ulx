page {
  background: #f5f5f5;
}

.cont_top {
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin: 20rpx;
}

.cont_top_img {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 40rpx;
}

.cont_top_img image {
  width: 100rpx;
  height: 94rpx;
  border-radius: 50%;
}

.cont_top_img_text1 {
  display: flex;
}

.cont_top_img_text {
  display: flex;
  flex-direction: column;
  height: 100rpx;
  justify-content: space-between;
  margin-left: 20px;
}

.cont_top_img_text text:nth-child(1) {
  font-size: 34rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.cont_top_img_text text:nth-child(2) {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}

.cont_top_img_text2 {
  font-size: 36rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(226, 85, 32, 1);
}
