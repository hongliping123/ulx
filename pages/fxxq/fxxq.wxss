.top {
  display: flex;
  padding: 0 30rpx;
  width: 750rpx;
  box-sizing: border-box;
  justify-content: space-between;
}

.top .top_left {
  display: flex;
}

.top .top_right {
  margin-left: 180rpx;
  border-radius: 23rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  margin-top: 38rpx;
  display: flex;
}

.top .top_right image {
  width: 36rpx;
  height: 36rpx;
}

.top .top_right text {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  margin-left: 15rpx;
}

.top .top_left image {
  width: 90rpx;
  height: 90rpx;
  margin-top: 15rpx;
}

.top .top_left .name {
  margin-left: 30rpx;
  line-height: 114rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.top .top_left .proposal {
  width: 120rpx;
  height: 45rpx;
  background: rgba(246, 159, 46, 1);
  border-radius: 23rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 45rpx;
  margin-top: 36rpx;
  margin-left: 30rpx;
}

.slide {
  width: 750rpx;
  height: 700rpx;
}

swiper {
  width: 750rpx;
  height: 700rpx;
}

swiper image {
  width: 750rpx;
  height: 700rpx;
}

.Label {
  width: 690rpx;
  margin: 0 auto;
  display: flex;
  margin-top: 30rpx;
}

.Label .Label_item {
  border-radius: 22rpx;
  font-size: 26rpx;
  height: 44rpx;
  line-height: 44rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(226, 85, 32, 1);
  background: rgba(226, 85, 32, 0.3);
  padding: 0 20rpx 0 57rpx;
  position: relative;
}

.Label .Label_item>image {
  width: 31rpx;
  height: 31rpx;
  position: absolute;
  top: 7rpx;
  left: 14rpx;
}

.text {
  width: 690rpx;
  margin: 0 auto;
  height: 25rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 25rpx;
  margin-top: 30rpx;
}

.Article {
  width: 690rpx;
  margin: 0 auto;
  margin-top: 50rpx;
}

.Article .Article_title {
  height: 30rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(52, 52, 52, 1);
  line-height: 30rpx;
}

.Article .Article_text {
  margin-top: 30rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(52, 52, 52, 1);
}

.hhh {
  width: 750rpx;
  height: 20rpx;
  background: rgba(238, 238, 238, 1);
  margin-top: 32rpx;
}

.Reply {
  width: 750rpx;
  box-sizing: border-box;
  padding: 30rpx;
}

.Reply .Reply_title {
  height: 27rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 27rpx;
  margin-bottom: 30rpx;
}

.Reply .Reply_list {
  display: flex;
}

.Reply .Reply_list>image {
  width: 55rpx;
  height: 55rpx;
}

.Reply .Reply_list .Reply_right {
  margin-left: 27rpx;
  flex: 1;
}

.Reply .Reply_list .Reply_right .Reply_name {
  height: 27rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
  line-height: 27rpx;
  margin-top: 10rpx;
}

.Reply .Reply_list .Reply_right .Reply_text {
  height: 25rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(157, 157, 157, 1);
  line-height: 25rpx;
  margin-top: 20rpx;
}
