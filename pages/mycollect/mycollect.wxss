.container {
  padding: 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.cont_top {
  width: 333rpx;
  height: 530rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 4px 8px 0px rgba(201, 201, 201, 0.75);
  border-radius: 10rpx;
  margin-top: 30rpx;
}

.cont_top>image {
  width: 100%;
  height: 316rpx;
}

.cont_top_text {
  padding: 10rpx;
}

.cont_top_text_title {
  display: flex;
  align-items: center;
}

.cont_top_text_title>image {
  width: 31rpx;
  height: 31rpx;
  margin-right: 10rpx;
}

.cont_top_text_title>text {
  font-size: 22rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(226, 85, 32, 1);
}

.cont_top_text_referral {
  font-size: 26rpx;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
  margin: 10rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.cont_top_text_img {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.cont_top_text_img1>image {
  height: 40rpx;
  width: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.cont_top_text_img1>text {
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.cont_top_text_img2>image {
  width: 26rpx;
  height: 22rpx;
  margin-right: 10rpx;
}

.cont_top_text_img2>text {
  font-size: 24rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(127, 127, 127, 1);
}

.cont_top_text_img1,cont_top_text_img2{
  display: flex;
  align-items: center;
}