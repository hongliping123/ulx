.nav {
  display: flex;
  width: 690rpx;
  margin: 0 auto;
}

.nav .nav_t1 {
  font-size: 30rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(29, 32, 35, 1);
  position: relative;
  height: 30rpx;
  line-height: 30rpx;
}

.nav .nav_t2 {
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(29, 32, 35, 1);
  height: 30rpx;
  line-height: 30rpx;
  margin-left: 45rpx;
}

.nav .nav_t1 .bottom {
  width: 74rpx;
  height: 8rpx;
  background: linear-gradient(-50deg, rgba(254, 161, 27, 1), rgba(226, 85, 32, 1));
  border-radius: 4px;
  position: absolute;
  bottom: -2rpx;
  left: 50%;
  transform: translateX(-50%);
}

.container {
  padding: 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.cont_top {
  width: 333rpx;
  height: 530rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 4px 8px 0px rgba(201, 201, 201, 0.75);
  border-radius: 10rpx;
  margin-top: 30rpx;
}

.cont_top .mua {
  position: relative;
}

.cont_top .mua .mua_left {
  width: 110rpx;
  height: 50rpx;
  background: rgba(50, 139, 250, 1);
  border-radius: 10px 0px 20px 0px;
  position: absolute;
  left: 0;
  top: 0;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 50rpx;
}

.cont_top .mua>image {
  width: 100%;
  height: 316rpx;
}

.cont_top_text {
  padding: 10rpx;
}

.cont_top_text_title {
  display: flex;
  align-items: center;
}

.cont_top_text_title>image {
  width: 31rpx;
  height: 31rpx;
  margin-right: 10rpx;
}

.cont_top_text_title>text {
  font-size: 22rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(226, 85, 32, 1);
}

.cont_top_text_referral {
  font-size: 26rpx;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
  margin: 10rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.cont_top_text_img {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.cont_top_text_img1>image {
  height: 40rpx;
  width: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.cont_top_text_img1>text {
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.cont_top_text_img2>image {
  width: 26rpx;
  height: 22rpx;
  margin-right: 10rpx;
}

.cont_top_text_img2>text {
  font-size: 24rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(127, 127, 127, 1);
}

.cont_top_text_img1, cont_top_text_img2 {
  display: flex;
  align-items: center;
}

.share {
  width: 160rpx;
  height: 85rpx;
  background: linear-gradient(-38deg, rgba(226, 85, 32, 1) 0%, rgba(252, 154, 27, 1) 100%);
  border-radius: 10rpx;
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  line-height: 85rpx;
  font-size: 38rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
}
